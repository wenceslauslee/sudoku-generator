{
    "extends": "standard",
    "rules": {
      "semi": [ 2, "always" ],
      "max-len": [ 2, { "code": 120 } ],
      "space-before-function-paren": [ 0, "never" ],
      "key-spacing": [ 2, { "afterColon": true } ]
    },
    "env": {
      "commonjs": true,
      "node": true,
      "mocha": true
    }
}